<Window x:Class="BrännbollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrännbollApp"
        mc:Ignorable="d"
        Title="BrännbollApp" 
        Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="30">Brännbollsräknaren</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Lag inne:</Label>
            <TextBox FontSize="18" FontWeight="bold" Width="80" Name="tbxInne"></TextBox>
            <Label>Lag ute:</Label>
            <TextBox FontSize="18" FontWeight="bold" Width="80" Name="tbxUte"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="KlickFrivarv" Margin="10" Width="80" Padding="5">Frivarv</Button>
            <Button Click="KlickBränning" Margin="10" Width="80" Padding="5">Bränning</Button>
            <Button Click="KlickLyra" Margin="10" Width="80" Padding="5">Lyra</Button>
            <Button Click="KlickVarv" Margin="10" Width="80" Padding="5">Varv</Button>
        </StackPanel>
        <Label>Historik</Label>
        <TextBox Name="tbxHistorik" IsReadOnly="True" Height="200" Width="450"></TextBox>
    </StackPanel>
</Window>
