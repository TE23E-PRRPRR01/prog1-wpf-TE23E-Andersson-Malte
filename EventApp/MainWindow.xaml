<Window x:Class="EventApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight"
        MinHeight="200" MinWidth="200">
    <StackPanel Margin="10" Background="lightblue">
        <Label Margin="5" FontSize="20" FontWeight="bold">Ange en text</Label>
        <TextBox Name="tbxText" Margin="5" Padding="50" TextWrapping="wrap" Width="200"></TextBox>
        <Button Click="KlickOk" Margin="10" Padding="10" Background="lightgreen" FontWeight="bold">OK</Button>
        <Button Click="KlickAvbryt" Margin="10" Padding="10" Background="#F87C7C" FontWeight="bold">Avbryt</Button>
    </StackPanel>
</Window>
